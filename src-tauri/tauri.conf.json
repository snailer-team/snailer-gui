{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Snailer",
  "version": "0.3.2",
  "identifier": "com.snailer.gui",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Snailer",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "ipc:", "http://ipc.localhost"],
        "base-uri": ["'self'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "form-action": ["'none'"],
        "script-src": ["'self'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "blob:", "asset:", "http://asset.localhost"],
        "font-src": ["'self'", "data:"],
        "media-src": ["'self'", "blob:"],
        "worker-src": ["'self'", "blob:"],
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "ws://127.0.0.1:*",
          "ws://localhost:*"
        ]
      },
      "devCsp": {
        "default-src": ["'self'", "ipc:", "http://ipc.localhost", "http://localhost:5173", "http://127.0.0.1:5173"],
        "base-uri": ["'self'"],
        "object-src": ["'none'"],
        "frame-ancestors": ["'none'"],
        "form-action": ["'none'"],
        "script-src": ["'self'", "'unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "blob:", "asset:", "http://asset.localhost", "http://localhost:5173", "http://127.0.0.1:5173"],
        "font-src": ["'self'", "data:"],
        "media-src": ["'self'", "blob:"],
        "worker-src": ["'self'", "blob:"],
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "ws://127.0.0.1:*",
          "ws://localhost:*",
          "ws://127.0.0.1:5173",
          "ws://localhost:5173",
          "http://127.0.0.1:5173",
          "http://localhost:5173"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
